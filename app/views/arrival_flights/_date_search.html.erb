<%= form_tag(arrival_flights_path, :method => "get", :class =>"date-search") do %>
  <%= label_tag(:q, "Date(DD/MM/YYYY)") %>
  <% if (!date_search.nil?) %>
    <%= text_field_tag(:date, date_search , :size => 10, :maxlength => 10) %>
  <% else %>
    <%= text_field_tag(:date, params[:date], :size => 10, :maxlength => 10) %>
  <% end %>
  <%= submit_tag("Search", :name => nil) %>
<% end %>