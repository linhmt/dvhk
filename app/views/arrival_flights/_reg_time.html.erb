<div class="group">
  <%= f.label :reg_no, "Reg No. ", :class => :label %>
  <%= f.text_field :reg_no, :class => 'right_text_field', :maxlength => 10 %>
  <%= f.label :Time, "STA", :class => :label %>
  <%= f.time_select :sta, 
    {:include_blank => true, :minute_step => 5},
    :class => 'right_text_field' %>
  <%= f.label :Time, "ETA", :class => :label %>
  <%= f.time_select(
    :eta, 
    {:include_blank => true},
    :class => 'right_text_field'
  )%>
  <%= f.label :Time, "ATA", :class => :label %>
  <%= f.time_select(
    :ata,
    {:include_blank => true},
    :class => 'right_text_field'
  )%>
  <% if (current_user && current_user.has_role?(:assign_roster)) %>
    <%= f.label :baggage_assessment, "Baggage Assessment", :class => :label %>
    <%= f.check_box :baggage_assessment %>
  <% end %>
</div>
