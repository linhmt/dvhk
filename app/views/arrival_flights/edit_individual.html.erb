<div class="block">
  <%= render(:partial => 'secondary') %>
  <div class="content">            
    <div class="inner">
      <%= form_tag update_individual_arrival_flights_path, :method => :put, :html => { :class => :form } do |f| -%>
        <% for arrival_flight in @arrival_flights %>      
          <%= fields_for "arrival_flights[]", arrival_flight do |f| %>
            <h2>Edit Flight <%= h arrival_flight.flight_no %> </h2>
            <%= render :partial => "form_time", :locals => {:f => f} %>
            <hr>
          <% end -%>
        <% end -%>
        <%= tinymce %>
        <p><%= submit_tag "Update All" %></p>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>