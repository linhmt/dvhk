<div class="block">
  <%= render(:partial => 'secondary') %>
  <div class="content">
    <div class="inner">
      <table class="table">
        <thead>
        <th width="25%"><%= @arrival_flight.flight_no %></th>
        <th>Details</th>
        </thead>
        <tr>
          <td><b>Registration No</b></td>
          <td><%= aircraft_type_reg_no(@arrival_flight) %></td>
        </tr>
        <tr>
          <td><b>Flight Date</b></td>
          <td>
            <%= l(@arrival_flight.flight_date, :format => :date_only) %>
          </td>
        </tr>
        <tr>
          <td><b>STA | ETA | ATA</b></td>
          <td>
            <%= @arrival_flight.sta.localtime.to_formatted_s(:time) unless @arrival_flight.sta.nil? %> | 
            <%= @arrival_flight.eta.nil? ? '...' : @arrival_flight.eta.localtime.to_formatted_s(:short) %> | 
            <%= @arrival_flight.ata.nil? ? '...' : @arrival_flight.ata.localtime.to_formatted_s(:short) %>
          </td>
        </tr>
        <tr>
          <td><b>VIP/CIP/SSR</b></td>
          <td>
            <%= sanitize @arrival_flight.ssr %>
          </td>
        </tr>
        <tr>
          <td><b>Outbound</b></td>
          <td>
            <%= sanitize retrieve_all_outbounds(@arrival_flight) %>
          </td>
        </tr>
        <tr>
          <td><b>Irregular Baggage</b></td>
          <td>
            <%= sanitize @arrival_flight.baggage %>
          </td>
        </tr>
        <tr>
          <td><b>Remarks</b></td>
          <td>
            <%= sanitize @arrival_flight.remarks %>
          </td>
        </tr>
        <tr>
          <td><b>Duty Staff</b></td>
          <td>
            <%= sanitize @arrival_flight.user.name unless @arrival_flight.user.nil? %>
          </td>
        </tr>
        <tr>
          <td><b>Lost N Found Staff</b></td>
          <td>
            <%= sanitize User.find(@arrival_flight.lnf_user_id).name unless @arrival_flight.lnf_user_id.nil? %>
          </td>
        </tr>
        <tr>
          <td><b>Approval By</b></td>
          <td>
            <%= User.find_by_id(@arrival_flight.approval_by).name unless @arrival_flight.approval_by.nil? %>
          </td>
        </tr>
      </table>
      <div class="wat-cf">
        <% if (@arrival_flight.is_approval!=true && !current_user.nil?) %>
          <%= link_to(image_tag("web-app-theme/icons/application_edit.png", :alt => "Edit") + " Edit",
            edit_arrival_flight_path(@arrival_flight), :class => "button") %>
          <% if (current_user.has_role?(:assign_roster, ArrivalFlight)) %>
            <%= link_to "Assign", assign_arrival_flight_path(@arrival_flight), :method => :put, :class => 'button' %>
            <%= link_to "Delete", deactive_arrival_flight_path(@arrival_flight), :method => :put, :class => 'button' %>
          <% end %>
        <% end -%>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>