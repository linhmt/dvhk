<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.go_show", :default => "Go Show")}", routings_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.briefing", :default => "Briefing")}", briefingposts_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.briefing", :default => "Morning")}", briefingposts_path(:shift => 1)  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.briefing", :default => "Afternoon")}", briefingposts_path(:shift => 2)  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.briefing", :default => "Night")}", briefingposts_path(:shift => 3)  %></li>
      <% unless current_user.nil? %>
        <li><%= link_to "#{t("web-app-theme.new", :default => "Add Briefing")}", new_briefingpost_path %></li>
      <% end -%>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "Briefing Notes") %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.briefingpost.content", :default => t("activerecord.labels.content", :default => "Content")) %>
          </th>
          <th><%= t("web-app-theme.active_date", :default => "Active Date")  %></th>
          <th><%= t("web-app-theme.active_shift", :default => "Shift")  %></th>
          <th>Segment</th>
          <th>Area</th>
        </tr>
        <% @briefingposts.each do |briefingpost| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= briefingpost.id %>
            </td>
            <td>
              <%= link_to briefingpost.content, briefingpost_path(briefingpost) %>
            </td>
            <td>
              <%= l(briefingpost.active_date, :format => :date_only) %>
            </td>
            <td>
              <% if briefingpost.active_shift == 0 %>
                All Day
              <% elsif briefingpost.active_shift == 1 %>
                Morning
              <% elsif briefingpost.active_shift == 2 %>
                Afternoon
              <% else %>
                Night
              <% end %>
            </td>
            <td>
              <%= briefingpost.is_domestic ? "Domestic" : "International" %>
            </td>
            <td>
              <%= briefingpost.is_departure ? "Dep" : "Arr" %>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

        <%= paginate @briefingposts  %>

      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
