<h3>Pre-flight</h3>
<div class="group">
  <%= f.label :flight_no, t("activerecord.attributes.flight.flight_no", :default => "Flight no"), :class => :label %>
  <%= f.text_field :flight_no, :class => 'text_field', :cols => 8 %>
</div>

<div class="group">
  <%= f.label "Routing", :class => :label %>
  <%= f.collection_select :routing_id, Routing.all, :id, :destination, :selected => @flight.routing_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :aircraft_id, t("activerecord.attributes.flight.aircraft_id", :default => "Aircraft"), :class => :label %>
  <%= f.number_field :aircraft_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :config, t("activerecord.attributes.flight.config", :default => "Config"), :class => :label %>
  <%= f.text_field :config, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :booking, t("activerecord.attributes.flight.booking", :default => "Booking"), :class => :label %>
  <%= f.text_field :booking, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :std, t("activerecord.attributes.flight.std", :default => "Std"), :class => :label %>
  <%= f.time_select :std, :class => 'time_select' %>
</div>

<div class="group">
  <%= f.label :priority_pax, t("activerecord.attributes.flight.priority_pax", :default => "Priority pax"), :class => :label %>
  <%= f.text_area :priority_pax, :class => 'text_area', :rows => 3 %>
</div>

<div class="group">
  <%= f.label :special_request_pax, t("activerecord.attributes.flight.special_request_pax", :default => "Special request pax"), :class => :label %>
  <%= f.text_area :special_request_pax, :class => 'text_area', :rows => 3 %>
</div>

<div class="group">
  <%= f.label :booked_transit_pax, t("activerecord.attributes.flight.booked_transit_pax", :default => "Booked transit pax"), :class => :label %>
  <%= f.text_field :booked_transit_pax, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :outbound_pax, t("activerecord.attributes.flight.outbound_pax", :default => "Outbound pax"), :class => :label %>
  <%= f.text_area :outbound_pax, :class => 'text_area', :rows => 3 %>
</div>

<div class="group">
  <%= f.label :inbound_pax, t("activerecord.attributes.flight.inbound_pax", :default => "Inbound pax"), :class => :label %>
  <%= f.text_area :inbound_pax, :class => 'text_area', :rows => 3 %>
</div>

<h3>Post-flight</h3>
<div class="group">
  <%= f.label :closing_time, t("activerecord.attributes.flight.closing_time", :default => "Closing time"), :class => :label %>
  <%= f.time_select :closing_time, :class => 'time_select' %>
</div>

<div class="group">
  <%= f.label :atd, t("activerecord.attributes.flight.atd", :default => "Atd"), :class => :label %>
  <%= f.time_select :atd, :class => 'time_select' %>
</div>


<div class="group">
  <%= f.label :meals, t("activerecord.attributes.flight.meals", :default => "Meals"), :class => :label %>
  <%= f.text_field :meals, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :remark, t("activerecord.attributes.flight.remark", :default => "Remark"), :class => :label %>
  <%= f.text_area :remark, :class => 'text_area', :rows => 5 %>
</div>

<div class="group">
  <%= f.label :transit_pax, t("activerecord.attributes.flight.transit_pax", :default => "Transit pax"), :class => :label %>
  <%= f.text_field :transit_pax, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :on_board, t("activerecord.attributes.flight.on_board", :default => "On board"), :class => :label %>
  <%= f.text_field :on_board, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :status, "Status", :class => :label %>
  <%= f.radio_button :status, true, {:checked => true} %> On Time<br/>
  <%= f.radio_button :status, false %> Delayed
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
  <%= link_to t("web-app-theme.cancel", :default => "Cancel"), flights_path, :class => "text_button_padding link_button" %>
</div>