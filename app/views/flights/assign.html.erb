<div class="block">
  <%= render(:partial => 'secondary') %>
  <div class="content">
    <h2>Assign Multiple Flights</h2>
    <div class="inner">
      <%= form_tag update_multiple_flights_path,
        :method => :put,
        :html => { :class => :form } do |f| -%>
      <ul>
        <% for flight in @flights %>
          <li>
            <%= h flight.flight_no %> <%= h flight.routing.routing  %>
          </li>
          <%= hidden_field_tag "flight_ids[]", flight.id %>
        <% end -%>
      </ul>
      <hr>
      <br>
        <%= label_tag "Duty Manager" %> 
        <%= select_tag :user_id,
          options_from_collection_for_select(User.all, :id, :short_name),
          :include_blank => true %>
        <%= submit_tag "Update All" %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>