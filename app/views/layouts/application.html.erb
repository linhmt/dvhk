<!DOCTYPE html>
<html>
  <head>
    <title>Flight Management</title>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-29985951-1']);
      _gaq.push(['_setDomainName', 'none']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    <%= stylesheet_link_tag 'application', debug: false %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico'%>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1><a href="/">Flight Management</a></h1>
        <div id="user-navigation">
          <ul class="wat-cf">
            <% if user_signed_in? %>
              <li><span style="color: white;">Signed in as <%= current_user.blank? ? current_user.name : current_user.short_name %></span></li>
              <li><%= link_to "Profile", user_path(current_user) %></a></li>
              <li><%= link_to('Sign out', destroy_user_session_path, :method => :delete) %></li>
            <% else %>
              <li>
                <%= link_to('Sign in', new_user_session_path)  %>  
              </li>
            <% end %>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf"></ul>
        </div>
      </div>    
      <div id="wrapper" class="wat-cf">
        <div class="flash">
          <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
          <% end -%>
        </div>
        <div id="main">
          <%= yield %>
          <div id="footer">
            <div class="block">
              <p>Copyright &copy; <%= Time.now.year %> Saigon Software & Technology Ltd.</p>
            </div>      
          </div>
        </div>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
      </div>    
    </div>
  </body>
</html>
