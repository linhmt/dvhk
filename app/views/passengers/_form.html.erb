<% routings = Routing.find(:all, :order => :destination) %>
<% priorities = Priority.find(:all, :order => :pri_level) %>

<div class="group">
  <%= f.label :pax_name, t("activerecord.attributes.passenger.pax_name", :default => "Passenger name"), :class => :label %>
  <span class="description">Vietnamese typing is acceptable</span>
  <%= f.text_field :pax_name, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :personal_id, t("activerecord.attributes.passenger.personal_id", :default => "Personal ID"), :class => :label %>
  <%= f.text_field :personal_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :routing_id, t("activerecord.attributes.passenger.routing_id", :default => "Routing"), :class => :label %>
  <%= f.collection_select :routing_id, routings, :id, :destination, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :origin_flt, t("activerecord.attributes.passenger.origin_flt", :default => "Origin flight"), :class => :label, :cols => 10 %>
  <span class="description">only use digits. Ex: VN1178 => 1178</span>
  <%= f.text_field :origin_flt, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :priority_id, t("activerecord.attributes.passenger.priority_id", :default => "Priority"), :class => :label %>
  <%= f.collection_select :priority_id, priorities, :id, :description, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :remark, t("activerecord.attributes.passenger.remark", :default => "Remark"), :class => :label %>
  <%= f.text_area :remark, :class => 'text_area', :cols => 80, :rows => 6 %>
</div>

<div class="group">
  <%= f.label :ticket_class, t("activerecord.attributes.passenger.ticket_class", :default => "Ticket class"), :class => :label %>
  <%= f.text_field :ticket_class, :class => 'text_field' %>
</div>



<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
  <%= link_to t("web-app-theme.cancel", :default => "Cancel"), passengers_path, :class => "text_button_padding link_button" %>
</div>