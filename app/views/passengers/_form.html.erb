<div class="group">
  <%= f.label "Passenger name", :class => :label %>
  <span class="description">Vietnamese typing is acceptable</span>
  <% if @passenger.pax_name.blank? %>
    <%= f.text_field :pax_name, :class => 'text_field' %>
  <% else%>
    <%= f.text_field :pax_name, :class => 'text_field', :disabled=>"disabled" %>
  <% end -%>
</div>

<div class="group">
  <%= f.label "Personal ID", :class => :label %>
  <span class="description">Driving license, ID card, Passport</span>
  <%= f.text_field :personal_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label "Routing", :class => :label %>
  <%= f.collection_select :routing_id, Routing.all, :id, :destination, :selected => @passenger.routing_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :origin_flt, t("activerecord.attributes.passenger.origin_flt", :default => "Origin flight"), :class => :label %>
  <span class="description">only use digits. Ex: VN1178 => 1178</span>
  <%= f.text_field :origin_flt, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label "Ticket class", :class => :label %>
  <%= f.text_field :ticket_class, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :priority_id, t("activerecord.attributes.passenger.priority_id", :default => "Priority"), :class => :label %>
  <%= f.collection_select :priority_id, Priority.where('is_active IS TRUE'), :id, :description,
                          :selected => @passenger.priority_id, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :remark, t("activerecord.attributes.passenger.remark", :default => "Remark"), :class => :label %>
  <%= f.text_area :remark, :class => 'text_area', :cols => 80, :rows => 6 %>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
  <%= link_to t("web-app-theme.cancel", :default => "Cancel"), new_routing_passenger_path(@passenger.routing), :class => "text_button_padding link_button" %>
</div>