<% routing = Routing.find_by_id(params[:routing_id]) %>
<div class="block">
  <%= render(:partial => 'secondary', :locals => {:routing => routing}) %>
  <div class="content">            
    <h2 class="title">New Passenger</h2>
    <div class="inner">
      <%= form_for @passenger, :url => routing_passengers_path(routing), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/routings') -%>