<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", passengers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_passenger_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", passenger_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.passenger.pax_name", :default => t("activerecord.labels.pax_name", :default => "Pax name")) %>:</b>
          <%= @passenger.pax_name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.personal_id", :default => t("activerecord.labels.personal_id", :default => "Personal")) %>:</b>
          <%= @passenger.personal_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.routing_id", :default => t("activerecord.labels.routing_id", :default => "Routing")) %>:</b>
          <%= @passenger.routing_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.remark", :default => t("activerecord.labels.remark", :default => "Remark")) %>:</b>
          <%= @passenger.remark %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.ticket_class", :default => t("activerecord.labels.ticket_class", :default => "Ticket class")) %>:</b>
          <%= @passenger.ticket_class %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.priority_id", :default => t("activerecord.labels.priority_id", :default => "Priority")) %>:</b>
          <%= @passenger.priority_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.sequence", :default => t("activerecord.labels.sequence", :default => "Sequence")) %>:</b>
          <%= @passenger.sequence %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.origin_flt", :default => t("activerecord.labels.origin_flt", :default => "Origin flt")) %>:</b>
          <%= @passenger.origin_flt %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.accepted_flt", :default => t("activerecord.labels.accepted_flt", :default => "Accepted flt")) %>:</b>
          <%= @passenger.accepted_flt %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.accepted", :default => t("activerecord.labels.accepted", :default => "Accepted")) %>:</b>
          <%= @passenger.accepted %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.called", :default => t("activerecord.labels.called", :default => "Called")) %>:</b>
          <%= @passenger.called %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.is_active", :default => t("activerecord.labels.is_active", :default => "Is active")) %>:</b>
          <%= @passenger.is_active %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.passenger.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @passenger.user_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_passenger_path(@passenger), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), passenger_path(@passenger), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>