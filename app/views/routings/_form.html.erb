
<div class="group">
  <%= f.label :routing, t("activerecord.attributes.routing.routing", :default => "Routing"), :class => :label %>
  <%= f.text_field :routing, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :destination, t("activerecord.attributes.routing.destination", :default => "Destination"), :class => :label %>
  <%= f.text_field :destination, :class => 'text_field' %>
</div>

<div class="group">
  <%= f.label :is_arrival, "Arrival Flight", :class => :label %>
  <%= f.check_box :is_arrival, :class => 'check_box' %>
</div>

<div class="group">
  <%= f.label :is_domestic, t("activerecord.attributes.routing.is_domestic", :default => "Is domestic"), :class => :label %>
  <%= f.check_box :is_domestic, :class => 'check_box' %>
</div>

<div class="group">
  <%= f.label :include_transit, t("activerecord.attributes.routing.include_transit", :default => "Include transit"), :class => :label %>
  <%= f.check_box :include_transit, :class => 'check_box' %>
</div>

<div class="group">
  <%= f.label :transit_point, t("activerecord.attributes.routing.transit_point", :default => "Transit point"), :class => :label %>
  <%= f.text_field :transit_point, :class => 'text_field' %>
</div>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
  <%= link_to t("web-app-theme.cancel", :default => "Cancel"), routings_path, :class => "text_button_padding link_button" %>
</div>