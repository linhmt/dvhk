<%= render(:partial => 'shared/important_notice') %>
<div class="block">
  <h3>Briefing Dates</h3>
  <% start_date = Time.current.weeks_ago(-1) %>
  <ul class="navigation">
    <% 1.upto(15) do |d| %>
      <% date = start_date + -d.days %>
      <% if date.to_date == Time.current.to_date %>
        <li class="current-date">
          <%= link_to "Today", briefingposts_path(:date => date.to_date), :method => :get -%>
        <% else %>
        <li>
          <%= link_to l(date, :format => :date_only), briefingposts_path(:date => date.to_date), :method => :get -%>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>